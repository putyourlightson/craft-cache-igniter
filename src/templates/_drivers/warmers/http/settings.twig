{% import '_includes/forms' as forms %}
{% from 'cache-igniter/_macros' import instructions %}

{% set info %}
    <span class="info">{{ 'The higher the number, the faster the cache will be warmed but the more server processing will be required. A value between 1 and 5 is recommended.'|t('cache-igniter') }}</span>
{% endset %}
{{ forms.textField({
    type: 'number',
    unit: 'concurrent requests'|t('cache-igniter'),
    label: 'Concurrency'|t('cache-igniter'),
    instructions: instructions('The max number of concurrent requests to use when warming the cache.', info),
    name: 'concurrency',
    min: 1,
    max: 100,
    value: warmer.concurrency,
    errors: warmer.getErrors('concurrency'),
    required: true,
}) }}
